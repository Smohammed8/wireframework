{% extends 'base.html.twig' %}

{% block title %}Position {% endblock %}

{% block body %}
   


    <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-1">
            <div class="col-sm-6">
                <h4>Position  </h4>
            </div>
            <div class="col-sm-6">
                <a style="float:right;" class="btn btn-outline-primary" href="{{ path('app_position_new') }}"> <i class="fa fa-plus"> </i> Create new</a>
            </div>
          </div>
        </div><!-- /.container-fluid -->
      </section>
    <hr>

    <table class="table table-sm">
        <thead>
            <tr>
                <th>#</th>
                <th> Organizational unit </th>
                <th> Job title </th>
                <th> No of positions </th>
                <th> Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for position in positions %}
            <tr>
                <td>{{ loop.index  }}</td>
                <td>{{ position.unit }}</td>
                <td>{{ position.jobTitle }}</td>
                <td>{{ position.NoOfVacants }}</td>
              
                <td>
                 
                <div class="btn-group">
                    <a class="btn btn-outline-secondary btn-sm mr-1" href="{{ path('app_position_edit', {'id': position.id}) }}"> <i class=" fa fa-edit"> </i> Edit</a>
                  
           
                    {{ include('position/_delete_form.html.twig') }}
                    <div>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
