{% extends 'base.html.twig' %}

{% block title %}SectionHead index{% endblock %}

{% block body %}
 

    <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-1">
            <div class="col-sm-6">
                <h4> List of section head  </h4>
            </div>
            <div class="col-sm-6">
                <a style="float:right;" class="btn btn-outline-primary" href="{{ path('app_section_head_new') }}"> <i class="fa fa-plus"> </i> Create new</a>
            </div>
          </div>
        </div><!-- /.container-fluid -->
      </section>
    <hr>

    <table class="table table-sm">
        <thead>
            <tr>
                <th>#</th>
                <th>Section </th>
                <th>Section head </th>
                <th>Year</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for section_head in section_heads %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ section_head.section }}</td>
                <td>{{ section_head.head }}</td>
                <td>{{ section_head.year }}</td>
                <td>
                    <div class="btn-group">
                    <a  class="btn btn-outline-secondary btn-sm mr-1" href="{{ path('app_section_head_show', {'id': section_head.id}) }}"> <i class="fa fa-book"> </i> Subjects</a>
                    <a  class="btn btn-outline-secondary btn-sm mr-1" href="{{ path('app_section_head_edit', {'id': section_head.id}) }}"> <i class="fa fa-edit"> </i> Edit</a>
                    
                    {{ include('section_head/_delete_form.html.twig') }}
                    <div>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="btn btn-sm float-right" style="margin-right:10px;" id="custompaginator">{{ knp_pagination_render(section_heads) }}</div>

{% endblock %}
