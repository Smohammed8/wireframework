{% extends 'base.html.twig' %}

{% block title %}StudentPayment index{% endblock %}

{% block body %}
    <h1>StudentPayment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Year</th>
                <th>Amount</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student_payment in student_payments %}
            <tr>
                <td>{{ student_payment.id }}</td>
                <td>{{ student_payment.year }}</td>
                <td>{{ student_payment.amount }}</td>
                <td>
                    <a href="{{ path('app_student_payment_show', {'id': student_payment.id}) }}">show</a>
                    <a href="{{ path('app_student_payment_edit', {'id': student_payment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_student_payment_new') }}">Create new</a>
{% endblock %}
