{% extends 'base.html.twig' %}

{% block title %}LeaveType index{% endblock %}

{% block body %}
    <h1>LeaveType index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for leave_type in leave_types %}
            <tr>
                <td>{{ leave_type.id }}</td>
                <td>{{ leave_type.name }}</td>
                <td>
                    <a href="{{ path('app_leave_type_show', {'id': leave_type.id}) }}">show</a>
                    <a href="{{ path('app_leave_type_edit', {'id': leave_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_leave_type_new') }}">Create new</a>
{% endblock %}
