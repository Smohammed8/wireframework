{% extends 'base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block body %}

    <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-1">
            <div class="col-sm-6">
                <h4> List of  Student  </h4>
            </div>
            <div class="col-sm-6">
                <a style="float:right;" class="btn btn-outline-primary" href="{{ path('app_student_new') }}"> <i class="fa fa-plus"> </i> Create new</a>
            </div>
          </div>
        </div><!-- /.container-fluid -->
      </section>
    <hr>

    {# <table class="table table-hover table-sm"> #}
        <table class="table table-hover table-sm table-responsive-sm"> 
        <thead>
            <tr>
                <th>#</th>
                <th>Full Name</th>
            
                <th>Gender</th>
                <th>Age </th>
                <th>Nationality</th>
                <th>Birth place</th>
                <th>Current address</th>
                <th>Email</th>
                <th>Phone</th>
                {# <th>HouseNumber</th>
                <th>MaritalStatus</th>
                <th>Kebele</th>
                <th>Photo</th> #}
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ student.getFullName }}</td>
                <td>{{ student.gender ?? '-' }}</td>
                <td>{{ student.dob ? student.dob|age : '' }} years old </td>
                <td>{{ student.nationality ?? '-' }}</td>
                <td>{{ student.birthPlace }}</td>
                <td>{{ student.currentAddress ?? '-' }}</td>
                <td>{{ student.email ?? '-' }}</td>
                <td>{{ student.phone ?? '-' }}</td>
                {# <td>{{ student.houseNumber }}</td>
                <td>{{ student.maritalStatus }}</td>
                <td>{{ student.kebele }}</td>
                <td>{{ student.photo }}</td>
           #}

                <td>
                    <div class="btn-group">
                    <a  class="btn btn-outline-secondary btn-sm mr-1" href="{{ path('app_student_show', {'id': student.id}) }}"> <i class="fa fa-eye"> </i> Profile</a>
                    <a  class="btn btn-outline-secondary btn-sm mr-1" href="{{ path('app_student_edit', {'id': student.id}) }}"> <i class="fa fa-edit"> </i> Edit</a>
                    
                    {{ include('student/_delete_form.html.twig') }}
                    <div>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="16">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <div class="btn btn-sm float-right" style="margin-right:10px;" id="custompaginator">{{ knp_pagination_render(students) }}</div>

{% endblock %}
