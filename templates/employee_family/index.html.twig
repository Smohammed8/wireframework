{% extends 'base.html.twig' %}

{% block title %}EmployeeFamily index{% endblock %}

{% block body %}
    <h1>EmployeeFamily index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Phone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for employee_family in employee_families %}
            <tr>
                <td>{{ employee_family.id }}</td>
                <td>{{ employee_family.firstName }}</td>
                <td>{{ employee_family.lastName }}</td>
                <td>{{ employee_family.phone }}</td>
                <td>
                    <a href="{{ path('app_employee_family_show', {'id': employee_family.id}) }}">show</a>
                    <a href="{{ path('app_employee_family_edit', {'id': employee_family.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_employee_family_new') }}">Create new</a>
{% endblock %}
