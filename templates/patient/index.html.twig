{% extends 'base.html.twig' %}

{% block title %}Patient index{% endblock %}

{% block body %}

    <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-1">
            <div class="col-sm-6">
                <h1> List of Patient  </h4>
            </div>
            <div class="col-sm-6">
                <a style="float:right;" class="btn btn-outline-primary" href="{{ path('app_patient_new') }}"> <i class="fa fa-plus"> </i> Create new</a>
            </div>
          </div>
        </div><!-- /.container-fluid -->
      </section>
    <hr>

    <table class="table table-sm">
        <thead>
            <tr>
                <th>#</th>
                <th> Patient Name</th>
                <th>CBHI Code </th>
                <th>Gender</th>
                <th>Emr</th>
                <th>Phone</th>
                <th>Age </th>
                <th>Address</th>
                <th>Indignet </th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ patient.firstName }} {{ patient.middleName }} {{ patient.lastName }} </td>
                <td> {{ patient.indigent }} /  {{ patient.woreda.zone.region.code }}/ {{ patient.woreda.zone.code }}/ {{ patient.woreda.code }}/ {{ patient.familyCode }}</td>
                <td>{{ patient.gender }}</td>
                <td>{{ patient.emr }}</td>
                <td>{{ patient.phone }}</td>
                <td>{{ patient.dob ? patient.dob|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ patient.address }}</td>
                <td>{{ patient.indigent }}</td>
                <td>
                    <div class="btn-group">
                    <a  class="btn btn-outline-secondary btn-sm mr-1" href="{{ path('app_patient_show', {'id': patient.id}) }}"> <i class="fa fa-eye"> </i> Profile</a>
                    <a  class="btn btn-outline-secondary btn-sm mr-1" href="{{ path('app_patient_edit', {'id': patient.id}) }}"> <i class="fa fa-edit"> </i> Edit</a>
                    
                    {{ include('patient/_delete_form.html.twig') }}
                    <div>
                </td>

                
            </tr>
        {% else %}
            <tr>
                <td colspan="10">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btn btn-sm float-right" style="margin-right:10px;" id="custompaginator">{{ knp_pagination_render(patients) }}</div>

{% endblock %}
